@model website_CLB_HTSV.Models.SinhVien


<div class="container-the">
    <div class="cardsv">
        <div class="content">
            <h1 class="ttv" > THẺ THÀNH VIÊN</h1>
            <div class="info">
                <p class="ht">@Model.HoTen</p>
                <p class="tt" >Chức vụ: @Model.ChucVu.TenChucVu</p>
                <p class="tt">Lớp: @Model.LopHoc.MaLop</p>
                <p class="tt">Số điện thoại: @Model.DienThoai</p>
                <p class="tt">Email: @Model.Email</p>
            </div>
            <!-- Các phần tử khác bạn muốn thêm vào đây -->
        </div>
        <img src="@(Url.Content("~/userimages/" + Model.HinhAnh))" class="overlay-image" alt="Overlay Image">
    </div>
</div>

<style>
    .container-the {
        width: 500px;
        height: 300px;
        display: flex;
        margin-left: 50%;
        transform: translateX(-50%);
    }

    .cardsv {
        position: relative;
        width: 100%;
        height: 100%;
        background-color: rgb(255, 255, 255);
        background-image: url('@Url.Content("~/assets/img/thethanhvienclb.png")');
        background-size: cover;
        background-position: center;
        border-radius: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); /* Đổ bóng với màu đen và độ mờ là 0.2 */
    }


    .content {
        width: 100%;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-15%, -40%);
        text-align: center;
        color: white;
    }
    .ttv{
        color: #00a2e9;
        font-size: 20px;
        font-weight: bold;
        margin-top: -20px;
        padding-bottom: 15px;
        transform: translateX(-35%)
    }
    .ht {
        font-weight:bold;

    }
    .info {
        width: 70%;
        height: 100%;
        text-align: left;
        color: #000000;
        margin-left: 0;
        line-height: 0.7;
    }

    .overlay-image {
        position: absolute;
        top: 0;
        left: 0;
        margin-top: 22%;
        margin-left: 40px;
        width: 110px;
        height: 130px;
        object-fit: cover;
        border-radius: 10px;
        border: 3px solid #00a2e9;
    }



    /* Responsive CSS */
    @@media only screen and (max-width: 600px) {
        .container-the {
            width: 300px;
            height: 200px;
        }
        .ttv{
            color: #00a2e9;
            font-size: 10px;
            font-weight: bold;
            margin-top: 60px;
            padding-bottom: 0;
        }
        .ht{
            font-size: 10px;
        }
        .tt {
            font-size: 9px;
        }
        .content {
            padding: 10px; /* Giảm khoảng cách giữa nội dung và mép của thẻ khi trên điện thoại */
            margin-top: -40px;
        }
        .overlay-image {
            width: 80px;
            height: 90px;
            margin-top: 24%;
            margin-left: 20px;
        }
        .info{
            margin-top: 15px;
            margin-left: 0;
            line-height: 0.3;
        }
        .content {
            height: 200px;  
            width: 100%;
            position: absolute;
            margin-left: 0px;
            text-align: center;
            color: white;
        }

      

    }


</style>
@if (User.IsInRole("Administrators"))
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.MaSV">Edit</a> |
        <a href="/SinhViens">Back to List</a>
    </div>
}